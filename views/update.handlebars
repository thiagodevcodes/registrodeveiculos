<form action="/updated/{{id}}" method="POST">
    <div class="login-area">
        <div class="login-logo">
            <img src="/img/estacionamento2.png" alt="" class="login-img">
            <h1 class="login-tittle">Editar</h1>
        </div>
    
        <input class="login-input" placeholder="Nome" type="text" name="nome" value="{{nome}}" required/> 
        <input class="login-input" placeholder="Marca" type="text" name="marca" value="{{marca}}" required/>
        <input class="login-input" placeholder="Modelo" type="text" name="modelo" value="{{modelo}}" required/>
        <input class="login-input" placeholder="Placa" type="text" name="placa" value="{{placa}}" required/>
        <br>
        <button class="login-button" type="submit">Enviar</button>
        <a href="/home"><button class="cad-button" type="button">Voltar</button></a>
    </div>
</form>

